"use client";
import { AVATARS, Avatar } from "@/lib/avatars";
import { useState } from "react";

type Props = {
  value?: string | null;
  onChange?: (id: string | null) => void;
};

export default function AvatarPicker({ value, onChange }: Props) {
  const [selected, setSelected] = useState<string | null>(value ?? null);

  function pick(id: string) {
    const v = selected === id ? null : id;
    setSelected(v);
    onChange?.(v);
  }

  return (
    <div className="space-y-2">
      <div className="text-sm font-medium">Pick an AI avatar (optional)</div>
      <div className="grid gap-3 grid-cols-2 sm:grid-cols-3 md:grid-cols-4">
        {AVATARS.map((a: Avatar) => (
          <button
            key={a.id}
            onClick={() => pick(a.id)}
            className={[
              "rounded-2xl p-3 text-left border transition",
              selected === a.id ? "border-blue-500 ring-2 ring-blue-200" : "border-slate-200 hover:border-slate-300"
            ].join(" ")}
          >
            <div
              className="h-12 w-12 rounded-xl flex items-center justify-center text-2xl"
              style={{ background: `linear-gradient(135deg, ${a.colors[0]}, ${a.colors[1]})` }}
              aria-hidden
            >
              <span>{a.emoji}</span>
            </div>
            <div className="mt-2 font-semibold">{a.name}</div>
            <div className="text-xs text-slate-500">{a.tagline}</div>
          </button>
        ))}
      </div>
      {selected && <div className="text-xs text-slate-600">Selected: {selected}</div>}
    </div>
  );
}
