# ===== Backend (FastAPI) =====
APP_ENV=development
PORT=10000

# Postgres (Neon)
DATABASE_URL=postgresql://USER:PASSWORD@HOST/DBNAME?sslmode=require

# Redis (Upstash)
REDIS_URL=rediss://:PASSWORD@HOST:PORT

# DigitalOcean Spaces (S3-compatible)
S3_ENDPOINT=https://nyc3.digitaloceanspaces.com
S3_REGION=nyc3
S3_BUCKET=tregu-prod-uploads
S3_ACCESS_KEY_ID=YOUR_DO_SPACES_KEY
S3_SECRET_ACCESS_KEY=YOUR_DO_SPACES_SECRET
PUBLIC_CDN_BASE=https://tregu-prod-uploads.nyc3.cdn.digitaloceanspaces.com

# Auth / Security
JWT_SECRET=CHANGE_ME_TO_A_LONG_RANDOM_STRING
JWT_ALG=HS256
CORS_ORIGINS=http://localhost:3000,https://www.tregu.com,https://tregu.onrender.com
RATE_LIMIT_GLOBAL=200/min
AI_LOG_RETENTION_DAYS=30

# ===== Frontend (Next.js) =====
NEXT_PUBLIC_API_BASE=http://localhost:8000
NEXT_PUBLIC_CDN_BASE=https://tregu-prod-uploads.nyc3.cdn.digitaloceanspaces.com
